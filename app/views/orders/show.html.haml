%p#notice= notice

%p
  %b Order status:
  = @order.order_status_id
%p
  %b Origin order number:
  = @order.origin_order_number
%p
  %b Origin payment number:
  = @order.origin_payment_number
%p
  %b Customer name:
  = @order.customer_name
%p
  %b Phone:
  = @order.phone
%p
  %b Id number:
  = @order.id_number
%p
  %b Province:
  = @order.province
%p
  %b City:
  = @order.city
%p
  %b Street:
  = @order.street
%p
  %b Zip code:
  = @order.zip_code

%table.table.table-condensed.table-hover
  %thead
    %tr
      %th 名称
      %th 数量
      %th 报关价格

  %tbody
    - @order.order_products.each do |order_line|
      %tr
        %td= order_line.product.name
        %td= order_line.number
        %td= order_line.custom_price



= link_to 'Edit', edit_order_path(@order)
\|
= link_to 'Back', orders_path
